source "https://rubygems.org"

gem "jekyll", "~> 4.3.0"
gem "just-the-docs", "~> 0.7.3"

group :jekyll_plugins do
  gem "jekyll-remote-theme"
end

# Windows compatibility
platforms :mingw, :x64_mingw, :mswin do
  gem "tzinfo", ">= 1"
  gem "tzinfo-data"
  gem "wdm", "~> 0.1.1"
end

# Webrick for Ruby 3.0+
gem "webrick", "~> 1.7"
